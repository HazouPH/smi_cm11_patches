From: Patrick Harbers <jgrharbers@gmail.com>
Date: Sat, 7 Jan 2017 23:44:39 +0100
Subject: [PATCH 8/9] [pixelflinger] Include whole libenc, much easier for
 other libs

Change-Id: I41a66a5e05acaff72e0dd1d2a8cfae6f4c56033d
---
 libpixelflinger/Android.mk | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/libpixelflinger/Android.mk b/libpixelflinger/Android.mk
index ff7ae2b..8201b22 100644
--- a/libpixelflinger/Android.mk
+++ b/libpixelflinger/Android.mk
@@ -41,7 +41,7 @@ PIXELFLINGER_SRC_FILES +=  \
 LOCAL_C_INCLUDES := \
     $(TARGET_OUT_HEADERS)/libenc
 
-LOCAL_STATIC_LIBRARIES += libenc
+LOCAL_WHOLE_STATIC_LIBRARIES += libenc
 endif
 
 ifeq ($(TARGET_ARCH),arm)
@@ -97,7 +97,7 @@ LOCAL_CFLAGS := $(PIXELFLINGER_CFLAGS)
 ifeq ($(TARGET_ARCH),x86)
 LOCAL_C_INCLUDES := \
     $(TARGET_OUT_HEADERS)/libenc
-LOCAL_STATIC_LIBRARIES += libenc
+LOCAL_WHOLE_STATIC_LIBRARIES += libenc
 endif
 include $(BUILD_STATIC_LIBRARY)
 
